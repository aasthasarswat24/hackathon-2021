<section class="cart">
    <% if (session.cart){ %>
        <div class="order container mx-auto w-1/2 py-10" >
            <div class="flex items-center border-b pb-6 border-grey-300">
                <img width="40px" src="/images/cart2.png" alt="cart1">
                <h1 class="font-bold ml-4 text-xl" style="color:#777;">ORDER SUMMARY</h1>
            </div>
            <div class="burger-list mt-8 py-4">
                <% for(let brownie of Object.values(session.cart.items)){  %>
                <div class="flex items-center my-8">
                    <img class="w-24" src="<%= brownie.items.image %>" alt="cart-list">
                    <div class=" flex-1 ml-4">
                        <h1 class="" style="font-weight:600;"><%= brownie.items.name %></h1>
                    </div class="">
                    <span class="flex-1"><%= brownie.qty %></span>
                    <span class="font-bold text-lg " style="color:#777;">â‚¹ <%= brownie.items.price * brownie.qty %></span>
                </div>
                <% } %>
    
            </div>
            <hr>
            
    
            <div class="text-right py-4">
                <div class="mt-6">
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount ml-2 text-2xl font-bold">â‚¹ <%= session.cart.totalPrice %></span>
                </div>
                <% if(user) { %>
                <div>
                    <form action="/orders" method="POST">
                        <input class="border border-grey-400 p-2 w-1/2 mt-4" name="phone" type="text" placeholder="Phone number">
                        <input class="border border-grey-400 p-2 w-1/2 mt-4" name="address" type="text" placeholder="Adress">

                        <div>
                        <button class="px-20 py-3 text-white font-bold btn-primary mt-6" type="submit">Order Now</button>
                        </div>
                    </form>
                </div>
                <% } else{  %>
                <a href="/login" class="inline-block cursor-pointer px-20 py-3 text-white font-bold btn-primary mt-6 mb-6 ">Login to continue</a>
                <% } %> 
            </div>
        </div>

        <% } else{ %>
    <div class="empty-cart">
        <div class="container mx-auto text-center pb-2">
            <div class="py-6 ">
            <h1 class="text-2xl font-bold mb-2" style="color:#777">CART EMPTY ðŸ˜•</h1>
            <p style="color:#777; font-size:18px;">You probably haven't ordered anything yet.
                To order, go to main page.
            </p>
            <a href="/" class="inline-block px-20 py-3 text-white font-bold btn-primary my-10">Go back</a>
            </div>
            <img class="w-1/4 py-8 mx-auto" src="/images/empty-cart.png" alt="empty-cart">
      
        </div>
    </div> 
    <% } %>


</section>